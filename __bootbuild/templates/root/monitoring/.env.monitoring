# Monitoring Configuration
# This file contains environment variables for various monitoring providers
# Copy to .env and fill in your actual values

# ===================================================================
# Sentry Configuration (Error Tracking)
# ===================================================================
SENTRY_DSN={{SENTRY_DSN}}
SENTRY_AUTH_TOKEN={{SENTRY_AUTH_TOKEN}}
SENTRY_ORG={{SENTRY_ORG}}
SENTRY_PROJECT={{SENTRY_PROJECT}}
SENTRY_URL=https://sentry.io/
SENTRY_ENVIRONMENT={{ENVIRONMENT}}
SENTRY_RELEASE={{VERSION}}
SENTRY_TRACES_SAMPLE_RATE={{SENTRY_TRACES_SAMPLE_RATE}}

# ===================================================================
# Datadog Configuration (APM & Metrics)
# ===================================================================
DATADOG_API_KEY={{DATADOG_API_KEY}}
DATADOG_APP_KEY={{DATADOG_APP_KEY}}
DATADOG_SITE={{DATADOG_SITE}}
DD_ENV={{ENVIRONMENT}}
DD_SERVICE={{PROJECT_NAME}}
DD_VERSION={{VERSION}}
DD_LOGS_INJECTION={{DATADOG_LOGS_ENABLED}}
DD_TRACE_ENABLED={{DATADOG_APM_ENABLED}}
DD_TRACE_SAMPLE_RATE={{DATADOG_APM_SAMPLE_RATE}}

# ===================================================================
# New Relic Configuration (APM)
# ===================================================================
NEW_RELIC_LICENSE_KEY={{NEWRELIC_LICENSE_KEY}}
NEW_RELIC_APP_NAME={{PROJECT_NAME}}
NEW_RELIC_LOG_LEVEL={{NEWRELIC_LOG_LEVEL}}
NEW_RELIC_DISTRIBUTED_TRACING_ENABLED={{NEWRELIC_DISTRIBUTED_TRACING}}

# ===================================================================
# Prometheus Configuration (Metrics)
# ===================================================================
PROMETHEUS_PORT=9090
PROMETHEUS_SCRAPE_INTERVAL={{PROMETHEUS_SCRAPE_INTERVAL}}
PROMETHEUS_EVAL_INTERVAL={{PROMETHEUS_EVAL_INTERVAL}}

# ===================================================================
# Application Configuration
# ===================================================================
ENVIRONMENT={{ENVIRONMENT}}
PROJECT_NAME={{PROJECT_NAME}}
VERSION={{VERSION}}
TEAM_NAME={{TEAM_NAME}}
APP_PORT={{APP_PORT}}
