{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "version": "1.0.0",
  "description": "License compliance whitelist for dependency management",

  "whitelist": {
    "permissive": [
      "MIT",
      "Apache-2.0",
      "BSD-2-Clause",
      "BSD-3-Clause",
      "ISC",
      "CC0-1.0",
      "CC-BY-3.0",
      "CC-BY-4.0",
      "Unlicense",
      "0BSD",
      "Python-2.0",
      "Zlib",
      "BlueOak-1.0.0"
    ],
    "weakCopyleft": [
      "LGPL-2.1",
      "LGPL-2.1-only",
      "LGPL-2.1-or-later",
      "LGPL-3.0",
      "LGPL-3.0-only",
      "LGPL-3.0-or-later",
      "MPL-2.0",
      "EPL-1.0",
      "EPL-2.0",
      "CDDL-1.0",
      "CDDL-1.1"
    ]
  },

  "blacklist": {
    "strongCopyleft": [
      "GPL-2.0",
      "GPL-2.0-only",
      "GPL-2.0-or-later",
      "GPL-3.0",
      "GPL-3.0-only",
      "GPL-3.0-or-later",
      "AGPL-1.0",
      "AGPL-3.0",
      "AGPL-3.0-only",
      "AGPL-3.0-or-later",
      "SSPL-1.0"
    ],
    "proprietary": [
      "UNLICENSED",
      "COMMERCIAL"
    ]
  },

  "exceptions": {
    "packages": [],
    "reasoning": "Specific packages that require review or exception approval"
  },

  "policies": {
    "failOnBlacklisted": true,
    "warnOnWeakCopyleft": true,
    "requireLicenseInfo": true,
    "allowUnknownLicenses": false
  }
}
