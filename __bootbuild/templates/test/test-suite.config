#!/bin/bash
# ===================================================================
# test-suite.config - Test Suite Bootstrap Configuration
#
# This file defines project-specific settings for the test suite.
# Values are auto-detected when possible, or can be set manually.
#
# Usage:
#   1. Copy to your project root
#   2. Edit values as needed
#   3. Run: bootstrap-test-suite.sh
# ===================================================================

# ===================================================================
# Project Identification
# ===================================================================
# These are auto-detected from git/package.json/pyproject.toml if empty

# Project name in kebab-case (e.g., "my-app")
PROJECT_NAME=""

# Project name in PascalCase (e.g., "MyApp") - auto-derived if empty
PROJECT_NAME_PASCAL=""

# Project name in snake_case (e.g., "my_app") - auto-derived if empty
PROJECT_NAME_SNAKE=""

# Project name in SCREAMING_SNAKE_CASE (e.g., "MY_APP") - auto-derived if empty
PROJECT_NAME_UPPER=""

# ===================================================================
# Directory Structure
# ===================================================================

# Source code directory (relative to project root)
SRC_DIR="src"

# Tests directory (relative to project root)
TESTS_DIR="tests"

# ===================================================================
# API Settings
# ===================================================================

# Default API port for tests
API_PORT="5000"

# API base URL (constructed from port if empty)
API_BASE_URL=""

# ===================================================================
# Database Settings
# ===================================================================

# Test database name (defaults to ${PROJECT_NAME}_test)
DB_NAME=""

# Test database path for SQLite (defaults to temp directory)
DB_PATH=""

# ===================================================================
# Framework Selection
# ===================================================================
# Options are auto-detected from package.json/pyproject.toml if empty
# Set explicitly to override detection

# Python test framework: "pytest" (default)
PYTHON_FRAMEWORK="pytest"

# JavaScript test framework: "jest" | "vitest"
JS_FRAMEWORK=""

# Browser/E2E test framework: "puppeteer" | "playwright" | "none"
BROWSER_FRAMEWORK=""

# ===================================================================
# Installation Mode
# ===================================================================

# Mode: "full" | "minimal"
#   full    - All test types (unit, integration, e2e, browser)
#   minimal - Basic starter tests only (no storage dependencies)
INSTALL_MODE="full"

# ===================================================================
# Test Categories
# ===================================================================
# Set to "false" to skip specific test categories

INCLUDE_UNIT="true"
INCLUDE_INTEGRATION="true"
INCLUDE_E2E="true"
INCLUDE_BROWSER="true"

# ===================================================================
# Advanced Options
# ===================================================================

# Timezone for test timestamps
TZ="America/Chicago"

# Number of test log directories to retain
LOG_RETENTION_COUNT="3"

# Generate example/starter tests even if tests exist
FORCE_EXAMPLES="false"

# Backup existing test files before overwriting
BACKUP_EXISTING="true"
