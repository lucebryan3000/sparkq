// ===================================================================
// VS Code Keybindings - Bryan's Keyboard Shortcuts
// ===================================================================
//
// Place in: ~/.config/Code/User/keybindings.json (Linux)
//           ~/Library/Application Support/Code/User/keybindings.json (macOS)
//
// ===================================================================

[
  // -----------------------------------------------------------------
  // Navigation & Search
  // -----------------------------------------------------------------
  {
    "key": "/",
    "command": "workbench.action.quickOpen",
    "when": "!editorFocus && !inputFocus"
  },
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "ctrl+shift+f",
    "command": "workbench.action.findInFiles"
  },
  {
    "key": "ctrl+shift+p",
    "command": "workbench.action.showCommands"
  },

  // -----------------------------------------------------------------
  // Terminal
  // -----------------------------------------------------------------
  {
    "key": "ctrl+`",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "ctrl+shift+`",
    "command": "workbench.action.terminal.new"
  },
  {
    "key": "ctrl+shift+t",
    "command": "workbench.action.terminal.focus"
  },

  // -----------------------------------------------------------------
  // Editor
  // -----------------------------------------------------------------
  {
    "key": "ctrl+s",
    "command": "workbench.action.files.saveAll"
  },
  {
    "key": "ctrl+w",
    "command": "workbench.action.closeActiveEditor"
  },
  {
    "key": "ctrl+shift+w",
    "command": "workbench.action.closeAllEditors"
  },
  {
    "key": "ctrl+d",
    "command": "editor.action.addSelectionToNextFindMatch"
  },
  {
    "key": "ctrl+shift+d",
    "command": "editor.action.selectHighlights"
  },
  {
    "key": "alt+up",
    "command": "editor.action.moveLinesUpAction"
  },
  {
    "key": "alt+down",
    "command": "editor.action.moveLinesDownAction"
  },
  {
    "key": "ctrl+shift+k",
    "command": "editor.action.deleteLines"
  },
  {
    "key": "ctrl+/",
    "command": "editor.action.commentLine"
  },
  {
    "key": "ctrl+shift+/",
    "command": "editor.action.blockComment"
  },
  {
    "key": "ctrl+l",
    "command": "expandLineSelection"
  },

  // -----------------------------------------------------------------
  // Panels & Views
  // -----------------------------------------------------------------
  {
    "key": "ctrl+b",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "ctrl+shift+e",
    "command": "workbench.view.explorer"
  },
  {
    "key": "ctrl+shift+g",
    "command": "workbench.view.scm"
  },
  {
    "key": "ctrl+shift+d",
    "command": "workbench.view.debug"
  },
  {
    "key": "ctrl+shift+x",
    "command": "workbench.view.extensions"
  },

  // -----------------------------------------------------------------
  // Quick Actions (Escape closes everything)
  // -----------------------------------------------------------------
  {
    "key": "escape",
    "command": "workbench.action.closeQuickOpen",
    "when": "inQuickOpen"
  },
  {
    "key": "escape",
    "command": "workbench.action.closeMessages",
    "when": "globalMessageVisible"
  },
  {
    "key": "escape",
    "command": "editor.action.cancelSelectionAnchor",
    "when": "editorTextFocus && selectionAnchorSet"
  },

  // -----------------------------------------------------------------
  // Git
  // -----------------------------------------------------------------
  {
    "key": "ctrl+shift+g g",
    "command": "workbench.view.scm"
  },
  {
    "key": "ctrl+shift+g c",
    "command": "git.commit"
  },
  {
    "key": "ctrl+shift+g p",
    "command": "git.push"
  },
  {
    "key": "ctrl+shift+g l",
    "command": "git.pull"
  },

  // -----------------------------------------------------------------
  // Tasks (Development)
  // -----------------------------------------------------------------
  {
    "key": "ctrl+shift+b",
    "command": "workbench.action.tasks.build"
  },
  {
    "key": "ctrl+shift+t",
    "command": "workbench.action.tasks.test"
  },
  {
    "key": "f5",
    "command": "workbench.action.debug.start",
    "when": "!inDebugMode"
  },
  {
    "key": "shift+f5",
    "command": "workbench.action.debug.stop",
    "when": "inDebugMode"
  },

  // -----------------------------------------------------------------
  // AI Assistants
  // -----------------------------------------------------------------
  {
    "key": "ctrl+shift+i",
    "command": "github.copilot.interactiveEditor.explain"
  },
  {
    "key": "ctrl+shift+a",
    "command": "github.copilot.chat.attachSelection"
  },
  {
    "key": "ctrl+enter",
    "command": "github.copilot.acceptSuggestion",
    "when": "github.copilot.inlineSuggestionVisible"
  },

  // -----------------------------------------------------------------
  // Formatting
  // -----------------------------------------------------------------
  {
    "key": "alt+shift+f",
    "command": "editor.action.formatDocument"
  },
  {
    "key": "ctrl+k ctrl+f",
    "command": "editor.action.formatSelection"
  },

  // -----------------------------------------------------------------
  // Refactoring
  // -----------------------------------------------------------------
  {
    "key": "f2",
    "command": "editor.action.rename"
  },
  {
    "key": "ctrl+.",
    "command": "editor.action.quickFix"
  },
  {
    "key": "ctrl+shift+r",
    "command": "editor.action.refactor"
  },

  // -----------------------------------------------------------------
  // Go to Definition & References
  // -----------------------------------------------------------------
  {
    "key": "f12",
    "command": "editor.action.revealDefinition"
  },
  {
    "key": "alt+f12",
    "command": "editor.action.peekDefinition"
  },
  {
    "key": "shift+f12",
    "command": "editor.action.goToReferences"
  },
  {
    "key": "ctrl+shift+f12",
    "command": "editor.action.peekImplementation"
  },

  // -----------------------------------------------------------------
  // Multi-Cursor
  // -----------------------------------------------------------------
  {
    "key": "ctrl+alt+up",
    "command": "editor.action.insertCursorAbove"
  },
  {
    "key": "ctrl+alt+down",
    "command": "editor.action.insertCursorBelow"
  },
  {
    "key": "ctrl+shift+l",
    "command": "editor.action.selectHighlights"
  },

  // -----------------------------------------------------------------
  // Zen Mode & Focus
  // -----------------------------------------------------------------
  {
    "key": "ctrl+k z",
    "command": "workbench.action.toggleZenMode"
  },
  {
    "key": "ctrl+k ctrl+z",
    "command": "workbench.action.toggleCenteredLayout"
  }
]
