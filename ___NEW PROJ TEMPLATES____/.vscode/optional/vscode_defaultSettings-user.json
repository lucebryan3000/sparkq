{
  "git.openRepositoryInParentFolders": "always",
  "security.workspace.trust.untrustedFiles": "open",
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "explorer.confirmDragAndDrop": false,
  "git.confirmSync": false,
  "redhat.telemetry.enabled": true,
  "editor.accessibilitySupport": "off",
  "makefile.configureOnOpen": true,
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "explorer.confirmDelete": false,
  "python.analysis.typeCheckingMode": "basic",

  // TypeScript
  "typescript.tsserver.maxTsServerMemory": 8192,
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsserver.useSyntaxServer": "auto",
  "typescript.tsserver.nodePath": "/usr/local/bin/node",


  // Extension host settings
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "python.createEnvironment.trigger": "off",

  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "workbench.startupEditor": "none",

  "yaml.schemas": {
    "file:///home/luce/.vscode-server/extensions/continue.continue-1.2.2-linux-x64/config-yaml-schema.json": [
      ".continue/**/*.yaml"
    ]
  },

  "chatgpt.openOnStartup": true,
  "codespaces.portAttributes": [
    { "port": 3000, "label": "Web App", "onAutoForward": "openPreview" }
  ],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "livePreview.port": 3000,
  "liveServer.settings.port": 3000,
  "terminal.integrated.cwd": "${workspaceFolder}",
  "files.exclude": {
    "**/.DS_Store": true
  },

  "github.copilot.advanced": {},
  "docker.extension.enableComposeLanguageServer": false,
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "@azure.argTenant": "",
  "github.copilot.chat.codeGeneration.instructions": [],
  "github.copilot.enable": {
    "*": false
  },
  "github.copilot.chat.agent.autoFix": false,
  "workbench.editor.enablePreview": false,
  "workbench.editor.splitSizing": "split",
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "aitk-foundry-local:aitk",
  "github.copilot.nextEditSuggestions.enabled": true,
  "claudeCode.allowDangerouslySkipPermissions": true,
  "chat.instructionsFilesLocations": {
    ".github/instructions": true,
    "/Users/luce/.aitk/instructions/": true
  },
  "claudeCode.selectedModel": "haiku",
  "workbench.panel.showLabels": false,
  "workbench.editor.empty.hint": "hidden",
  "claudeCode.preferredLocation": "panel"
}
