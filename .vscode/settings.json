{
    // ===========================
    // Copilot (inline only)
    // ===========================
    "github.copilot.nextEditSuggestions.enabled": true,
    // ===========================
    // Explorer
    // ===========================
    "explorer.confirmPasteNative": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    // ===========================
    // Telemetry
    // ===========================
    "redhat.telemetry.enabled": true,
    // ===========================
    // Terminal
    // ===========================
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono, JetBrains Mono, monospace",
    // ===========================
    // Editor (Global Defaults)
    // ===========================
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.minimap.enabled": true,
    "editor.rulers": [
        80,
        120
    ],
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.linkedEditing": true,
    "editor.inlineSuggest.enabled": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.renderWhitespace": "boundary",
    "editor.cursorBlinking": "smooth",
    "editor.fontSize": 16,
    "editor.fontFamily": "JetBrainsMono Nerd Font Mono, JetBrains Mono, monospace",
    "editor.fontLigatures": true,
    "editor.accessibilitySupport": "off",
    // ===========================
    // Files
    // ===========================
    "files.autoSave": "onFocusChange",
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    // search excludes delegated to .gitignore
    "search.useIgnoreFiles": true,
    "files.exclude": {
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.venv": true,
        "**/node_modules": true,
        "**/dist": true,
        "**/_staging": true
    },
    // ===========================
    // File Associations
    // ===========================
    "files.associations": {
        "BUILD": "python",
        "*.BUILD": "python",
        "*.yaml": "yaml",
        "*.yml": "yaml"
    },
    // ===========================
    // Python (Global-Safe)
    // ===========================
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.mypyEnabled": true,
    "python.formatting.provider": "black",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.languageServer": "Pylance",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "ms-python.python",
        "editor.rulers": [
            88,
            120
        ]
    },
    // ===========================
    // YAML (Portable Only)
    // ===========================
    "yaml.format.enable": true,
    "yaml.format.singleQuote": false,
    "yaml.validate": true,
    "yaml.completion": true,
    "yaml.hover": true,
    "yaml.schemas": {
        "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
    },
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "advanced"
    },
    // ===========================
    // Git
    // ===========================
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.openRepositoryInParentFolders": "always",
    // ===========================
    // Markdown
    // ===========================
    "markdown.preview.breaks": true,
    "markdown.preview.fontSize": 16,
    "markdown.preview.lineHeight": 1.6,
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.formatOnSave": false
    },
    // ===========================
    // JavaScript / TypeScript / JSON (Prettier Zones)
    // ===========================
    "[javascript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },
    "[typescript]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },
    "[json]": {
        "editor.tabSize": 2,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features",
        "editor.formatOnSave": true
    },
    // ===========================
    // Workbench
    // ===========================
    "workbench.startupEditor": "none",
    "workbench.list.smoothScrolling": true,
    "workbench.tree.indent": 20,
    "workbench.editor.enablePreview": false,
    "workbench.sideBar.location": "right",
    "workbench.iconTheme": "material-icon-theme",
    // ===========================
    // TypeScript Global Settings
    // ===========================
    "typescript.tsserver.maxTsServerMemory": 8192,
    "typescript.tsserver.experimental.enableProjectDiagnostics": true,
    "typescript.tsserver.useSyntaxServer": "auto",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    // ===========================
    // Spell Checker
    // ===========================
    "cSpell.enabled": true,
    "cSpell.language": "en,en-US",
    "cSpell.userWords": [
        "Anthropic",
        "backend",
        "codebase",
        "Copilot",
        "deduplicate",
        "deduplication",
        "flake8",
        "Flowise",
        "frontend",
        "LangChain",
        "melissa",
        "microservices",
        "monorepo",
        "mypy",
        "orchestrator",
        "Pants",
        "pylint",
        "pytest",
        "SBOM",
        "venv",
        "workflow",
        "YAML"
    ],
    "cSpell.ignorePaths": [
        "**/node_modules/**",
        "**/.pants.d/**",
        "**/__pycache__/**",
        "**/dist/**",
        "**/.venv/**",
        "**/_staging/**"
    ],
    "editor.scrollbar.horizontalScrollbarSize": 16,
    "editor.scrollbar.verticalScrollbarSize": 16,
    "debug.console.fontSize": 16,
    "chat.fontSize": 16,
    "chat.editor.fontSize": 16
}
